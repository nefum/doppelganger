{
  "tasks": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "build": {
      "dependsOn": ["build-server", "db:generate"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build-server": {
      "dependsOn": ["db:generate"],
      "inputs": ["server/**"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["db:generate"],
      "cache": false
    },
    "start": {
      "dependsOn": ["build", "db:generate"],
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["db:generate"],
      "inputs": ["**/*.{ts,tsx}"],
      "cache": false
    },
    "format": {
      "cache": false
    },
    "test": {
      "dependsOn": ["db:generate"],
      "cache": false
    }
  }
}
