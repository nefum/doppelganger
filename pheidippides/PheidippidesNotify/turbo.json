{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["app/build/**", "build/**"],
      "cache": true,
      "dependsOn": [],
      "inputs": [
        "app/src/**/*.java",
        "app/src/**/*.xml",
        "app/build.gradle.kts",
        "build.gradle.kts",
        "gradle.properties"
      ],
      "env": ["SENTRY_AUTH_TOKEN", "SENTRY_ORG", "SENTRY_PROJECT", "SENTRY_RELEASE"]
    },
    "lint": {
      "outputs": ["app/build/reports/**"],
      "cache": true,
      "dependsOn": [],
      "inputs": [
        "app/src/**/*.java",
        "app/src/**/*.xml",
        "app/build.gradle.kts",
        "build.gradle.kts",
        "gradle.properties"
      ]
    },
    "test": {
      "outputs": ["app/build/test-results/**"],
      "cache": true,
      "dependsOn": [],
      "inputs": [
        "app/src/**/*.java",
        "app/src/test/**/*.java",
        "app/build.gradle.kts",
        "build.gradle.kts",
        "gradle.properties"
      ]
    }
  }
}
