{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": "commonjs"
      }
    ],
    [
      "@babel/preset-typescript",
      {
        "rewriteImportExtensions": true,
        "onlyRemoveTypeImports": true
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "cwd": "packagejson",
        "root": ".",
        "alias": {
          "^@/(.+)": "./src/\\1",
          "^%/(.+)": "./server/src/\\1"
        }
      }
    ]
  ],
  "sourceMaps": true
}
